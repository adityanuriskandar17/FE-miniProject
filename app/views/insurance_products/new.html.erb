<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with url: insurance_products_path, method: :post, local: true do |form| %>
  <div class="mb-3">
    <label for="insuranceProductName" class="form-label">Name</label>
    <%= form.text_field :name, class: 'form-control', id: 'insuranceProductName', value: @insurance_product['name'] %>
  </div>

  <%= form.submit 'Create Insurance Product', class: 'btn btn-primary' %>
<% end %>
